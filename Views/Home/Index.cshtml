@{
    ViewData["Title"] = "StarEvents - Your Premier Event Booking Platform";
}

<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Discover Amazing Events</h1>
                <p class="lead">Book tickets for concerts, theater shows, and cultural events across Sri Lanka</p>
                <div class="mt-4">
                    <a asp-controller="Users" asp-action="Register" class="btn btn-light btn-lg me-3">Get Started</a>
                    <a asp-controller="Events" asp-action="Index" class="btn btn-outline-light btn-lg">Browse Events</a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://images.unsplash.com/photo-1540575467063-178a50c2df87?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                     alt="Concert Event" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row text-center mb-5">
        <div class="col">
            <h2 class="fw-bold">Why Choose StarEvents?</h2>
            <p class="text-muted">The best platform for event organizers and attendees</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-primary mb-3">
                        <i class="fas fa-ticket-alt fa-3x"></i>
                    </div>
                    <h5 class="card-title">Easy Ticket Booking</h5>
                    <p class="card-text">Book your tickets online in just a few clicks with secure payment processing.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-primary mb-3">
                        <i class="fas fa-qrcode fa-3x"></i>
                    </div>
                    <h5 class="card-title">QR E-Tickets</h5>
                    <p class="card-text">Receive digital tickets with QR codes for quick and easy entry to events.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-primary mb-3">
                        <i class="fas fa-chart-line fa-3x"></i>
                    </div>
                    <h5 class="card-title">Event Management</h5>
                    <p class="card-text">Organizers can manage events, track sales, and generate reports easily.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="fw-bold">For Event Organizers</h2>
                <p class="lead">Reach thousands of potential attendees and manage your events efficiently.</p>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Easy event creation and management</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Real-time sales tracking</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Revenue reports and analytics</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Secure payment processing</li>
                </ul>
                <a asp-controller="Users" asp-action="Register" class="btn btn-primary mt-3">Become an Organizer</a>
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://images.unsplash.com/photo-1511795409834-ef04bbd61622?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
                     alt="Event Management" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
            border-radius: 0 0 2rem 2rem;
            margin-bottom: 3rem;
        }

        .card {
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .display-4 {
            font-weight: 800;
        }
    </style>
}